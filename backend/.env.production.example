# =================================
# CONFIGURACIÓN DE PRODUCCIÓN - VERIFIREANDO
# =================================
# Copia este archivo como .env en tu servidor de producción
# y configura todas las variables con los valores reales

# =================================
# CONFIGURACIÓN GENERAL
# =================================
NODE_ENV=production
PORT=5000

# =================================
# BASE DE DATOS - MONGODB ATLAS
# =================================
# Obtén tu connection string desde MongoDB Atlas
# Formato: mongodb+srv://<usuario>:<contraseña>@<cluster>.mongodb.net/<database>
MONGO_URI=mongodb+srv://usuario:contraseña@cluster.mongodb.net/verifireando

# =================================
# AUTENTICACIÓN JWT
# =================================
# Genera una clave secreta segura (mínimo 32 caracteres)
# Puedes usar: openssl rand -base64 32
JWT_SECRET=tu_clave_jwt_super_secreta_de_minimo_32_caracteres

# Tiempo de expiración del token (ejemplo: 7d, 24h, 30m)
JWT_EXPIRES_IN=7d

# =================================
# FRONTEND URL
# =================================
# URL donde estará desplegado tu frontend (Netlify/Vercel)
FRONTEND_URL=https://tuapp.netlify.app

# =================================
# FIREBASE CONFIGURATION
# =================================
# Obtén estas credenciales desde Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=tu-proyecto-firebase
FIREBASE_PRIVATE_KEY_ID=tu_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\ntu_private_key_aqui\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@tu-proyecto.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=tu_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40tu-proyecto.iam.gserviceaccount.com

# =================================
# MERCADO PAGO / STRIPE
# =================================
# Configuración de pagos (elige uno)

# MercadoPago (para México/Latinoamérica)
MERCADOPAGO_ACCESS_TOKEN=tu_access_token_de_mercadopago
MERCADOPAGO_PUBLIC_KEY=tu_public_key_de_mercadopago

# Stripe (alternativa internacional)
STRIPE_SECRET_KEY=sk_live_tu_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_tu_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_tu_webhook_secret

# =================================
# WHATSAPP BUSINESS API
# =================================
# Configuración para notificaciones por WhatsApp
WHATSAPP_TOKEN=tu_token_de_whatsapp_business
WHATSAPP_PHONE_NUMBER_ID=tu_phone_number_id
WHATSAPP_VERIFY_TOKEN=tu_verify_token_personalizado

# =================================
# EMAIL CONFIGURATION
# =================================
# Configuración SMTP para envío de emails
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu_app_password
EMAIL_FROM=noreply@tudominio.com

# =================================
# CLOUDINARY (para imágenes)
# =================================
# Alternativa a Firebase Storage
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# =================================
# CONFIGURACIÓN DE SEGURIDAD
# =================================
# Lista de dominios permitidos (separados por coma)
ALLOWED_ORIGINS=https://tuapp.netlify.app,https://tuapp.vercel.app,https://tudominio.com

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# =================================
# CONFIGURACIÓN DE LOGS
# =================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# =================================
# CONFIGURACIÓN DE SESIONES
# =================================
SESSION_SECRET=tu_session_secret_super_seguro

# =================================
# CONFIGURACIÓN DE UPLOADS
# =================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# =================================
# CONFIGURACIÓN DE CACHE
# =================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# =================================
# CONFIGURACIÓN DE MONITOREO
# =================================
# Para servicios como Sentry, LogRocket, etc.
SENTRY_DSN=https://tu_sentry_dsn@sentry.io/proyecto