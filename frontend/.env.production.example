VITE_FIREBASE_VAPID_KEY=BAbCdEfGhIjKlMnOpQrStUvWxYz1234567890AbCdEfGhIjKlMnOpQrStUvWxYz1234567890

# =================================
# STRIPE CONFIGURATION
# =================================
# Llave pública de Stripe (empieza con pk_live_ en producción)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_tu_stripe_publishable_key

# =================================
# MERCADO PAGO CONFIGURATION
# =================================
# Llave pública de MercadoPago
VITE_MERCADOPAGO_PUBLIC_KEY=APP_USR_tu_public_key_de_mercadopago

# =================================
# MAPBOX CONFIGURATION
# =================================
# Token público de Mapbox para los mapas
VITE_MAPBOX_ACCESS_TOKEN=pk.eyJ1IjoidHVfdXNlciIsImEiOiJjbGV0dXNlciJ9.tu_mapbox_token

# =================================
# PWA CONFIGURATION
# =================================
# Configuración para la Progressive Web App
VITE_APP_NAME=Verifireando
VITE_APP_SHORT_NAME=Verifireando
VITE_APP_DESCRIPTION=Aplicación de verificación vehicular con recolección y servicios extra

# =================================
# ANALYTICS & MONITORING
# =================================
# Google Analytics (opcional)
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry para monitoreo de errores (opcional)
VITE_SENTRY_DSN=https://tu_sentry_dsn@sentry.io/proyecto

# =================================
# CONFIGURACIÓN DE ENTORNO
# =================================
# Modo de la aplicación
VITE_NODE_ENV=production

# Habilitar/deshabilitar características
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# =================================
# CONFIGURACIÓN DE CACHE
# =================================
# Tiempo de cache para recursos estáticos (en segundos)
VITE_CACHE_DURATION=86400

# =================================
# CONFIGURACIÓN DE DESARROLLO
# =================================
# Solo para debugging en producción (normalmente false)
VITE_DEBUG_MODE=false
VITE_SHOW_CONSOLE_LOGS=false

# =================================
# URLS EXTERNAS
# =================================
# URLs de términos y condiciones, política de privacidad, etc.
VITE_TERMS_URL=https://tudominio.com/terminos
VITE_PRIVACY_URL=https://tudominio.com/privacidad
VITE_SUPPORT_URL=https://tudominio.com/soporte
VITE_CONTACT_EMAIL=soporte@tudominio.com

# =================================
# CONFIGURACIÓN DE NOTIFICACIONES
# =================================
# Configuración para notificaciones push
VITE_NOTIFICATION_ICON=/icons/notification-icon.png
VITE_NOTIFICATION_BADGE=/icons/notification-badge.png

# =================================
# CONFIGURACIÓN DE SOCIAL MEDIA
# =================================
# Para compartir en redes sociales
VITE_SOCIAL_IMAGE=https://tudominio.com/og-image.jpg
VITE_SOCIAL_TITLE=Verifireando - Verificación Vehicular
VITE_SOCIAL_DESCRIPTION=La mejor app para verificación vehicular con recolección a domicilio