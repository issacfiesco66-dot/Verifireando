# ========================================
# CONFIGURACIÓN DE PRODUCCIÓN - VERIFIREANDO
# ========================================
# IMPORTANTE: Reemplaza todos los valores con tus credenciales reales
# NO commitees este archivo al repositorio

# === SERVIDOR ===
NODE_ENV=production
PORT=5000

# === FRONTEND (Reemplazar con tu dominio real) ===
FRONTEND_URL=https://tu-dominio.com
ALLOWED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com

# === MONGODB ATLAS (REQUERIDO) ===
# Obtén tu connection string de: https://cloud.mongodb.com
# Formato: mongodb+srv://usuario:password@cluster.mongodb.net/verifireando?retryWrites=true&w=majority
MONGO_URI=mongodb+srv://TU_USUARIO:TU_PASSWORD@TU_CLUSTER.mongodb.net/verifireando?retryWrites=true&w=majority
DB_NAME=verifireando

# === JWT SECRETS (GENERADOS - COPIAR A PRODUCCIÓN) ===
# Estos secrets fueron generados aleatoriamente - CÓPIALOS EXACTAMENTE
JWT_SECRET=REEMPLAZAR_CON_SECRET_GENERADO
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=REEMPLAZAR_CON_SECRET_GENERADO
JWT_REFRESH_EXPIRES_IN=30d

# === STRIPE (PRODUCCIÓN) ===
# Cambiar a claves LIVE (no test) para producción real
# Obtén tus claves de: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_TU_CLAVE_SECRETA_DE_STRIPE
STRIPE_PUBLISHABLE_KEY=pk_live_TU_CLAVE_PUBLICA_DE_STRIPE
STRIPE_WEBHOOK_SECRET=whsec_TU_WEBHOOK_SECRET

# === WHATSAPP BUSINESS API (CRÍTICO) ===
# Sin esto, los usuarios NO pueden verificar sus cuentas
# Configura en: https://business.facebook.com
WHATSAPP_API_KEY=TU_WHATSAPP_API_KEY
WHATSAPP_PHONE_NUMBER_ID=TU_PHONE_NUMBER_ID
WHATSAPP_BUSINESS_ACCOUNT_ID=TU_BUSINESS_ACCOUNT_ID
WHATSAPP_MOCK_MODE=false

# === FIREBASE (OPCIONAL - Para push notifications) ===
FIREBASE_PROJECT_ID=tu-proyecto-firebase
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nTU_PRIVATE_KEY_AQUI\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@tu-proyecto.iam.gserviceaccount.com
FIREBASE_STORAGE_BUCKET=tu-proyecto.appspot.com

# === RATE LIMITING (Ajustado para producción) ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# === LOGGING ===
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# === SECURITY ===
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=REEMPLAZAR_CON_SECRET_GENERADO

# === CORS (Ajustar según tu dominio) ===
CORS_ORIGIN=https://tu-dominio.com

# === APP CONFIGURATION ===
APP_NAME=Verifireando
APP_VERSION=1.0.0
SUPPORT_EMAIL=soporte@verifireando.com
SUPPORT_PHONE=+525512345678

# === BUSINESS CONFIGURATION ===
PLATFORM_FEE_PERCENTAGE=10
PROCESSING_FEE_PERCENTAGE=3
DEFAULT_CURRENCY=MXN
DEFAULT_TIMEZONE=America/Mexico_City

# === OTP CONFIGURATION ===
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6
MAX_OTP_ATTEMPTS=3

# === EMAIL (OPCIONAL - Para notificaciones) ===
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-app-password
EMAIL_FROM="Verifireando <noreply@verifireando.com>"

# === MAPBOX (OPCIONAL - Para mapas) ===
GOOGLE_MAPS_API_KEY=tu_google_maps_api_key

# === AWS S3 (OPCIONAL - Para almacenamiento de archivos) ===
AWS_ACCESS_KEY_ID=tu_aws_access_key_id
AWS_SECRET_ACCESS_KEY=tu_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=verifireando-uploads

# === UPLOADS ===
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf
